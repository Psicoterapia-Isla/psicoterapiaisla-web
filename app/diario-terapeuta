<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Diarios pacientes</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="assets/css/app.css">
</head>

<body class="app-body">

<!-- MEN√ö DIN√ÅMICO -->
<nav id="app-menu" class="app-menu"></nav>

<div class="app-container">
  <div class="card">
    <h1>Diarios terap√©uticos</h1>
    <div id="entries"></div>
  </div>
</div>

<script type="module">
  import { requireAuth } from "./assets/js/auth.js";
  import { loadMenu } from "./assets/js/menu.js";
  import { auth, db } from "./assets/js/firebase.js";
  import {
    collection,
    query,
    where,
    orderBy,
    getDocs,
    getDoc,
    doc
  } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

  requireAuth();

  (async () => {
    // 1Ô∏è‚É£ Obtener rol del usuario
    const userDoc = await getDoc(doc(db, "users", auth.currentUser.uid));
    const role = userDoc.data()?.role || "patient";

    // 2Ô∏è‚É£ Cargar men√∫ seg√∫n rol
    loadMenu(role);

    // üîí Seguridad extra: solo terapeuta
    if (role !== "therapist") {
      alert("Acceso no autorizado");
      window.location.href = "index.html";
      return;
    }

    // 3Ô∏è‚É£ Consulta de diarios
    const q = query(
      collection(db, "entries"),
      where("tipo", "==", "diario"),
      orderBy("createdAt", "desc")
    );

    const snap = await getDocs(q);
    const container = document.getElementById("entries");

    if (snap.empty) {
      container.innerHTML = "<p>No hay diarios todav√≠a.</p>";
      return;
    }

    snap.forEach(docSnap => {
      const d = docSnap.data();
      container.innerHTML += `
        <div class="entry">
          <small><strong>Paciente:</strong> ${d.uid}</small><br>
          <small>${d.createdAt?.toDate().toLocaleString() || ""}</small>
          <p>${d.texto}</p>
          <hr>
        </div>
      `;
    });
  })();
</script>

</body>
</html>
