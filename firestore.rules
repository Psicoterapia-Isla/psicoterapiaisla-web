rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null
        && request.auth.uid == userId;
    }

    match /patients_normalized/{patientId} {
      allow read, write: if request.auth != null;
    }

    match /clinics/{clinicId} {

      allow read: if isMember(clinicId);
      allow write: if isAdmin(clinicId);

      match /appointments/{appointmentId} {
        allow read, write: if isMember(clinicId);
      }

      match /availability/{availabilityId} {
        allow read, write: if isMember(clinicId);
      }

      match /invoices/{invoiceId} {
        allow read, write: if isMember(clinicId);
      }

      match /therapists/{therapistId} {
        allow read: if isMember(clinicId);
        allow write: if isAdmin(clinicId);
      }
    }

    function isMember(clinicId) {
      return request.auth != null
        && clinicId in get(
          /databases/$(database)/documents/users/$(request.auth.uid)
        ).data.clinicIds;
    }

    function isAdmin(clinicId) {
      return request.auth != null
        && clinicId in get(
          /databases/$(database)/documents/users/$(request.auth.uid)
        ).data.clinicIds
        && get(
          /databases/$(database)/documents/users/$(request.auth.uid)
        ).data.role == "admin";
    }
  }
}